<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TableLayout android:id="@+id/tableLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="0">
            <TableRow android:id="@+id/tableRow3" android:layout_height="wrap_content" android:layout_width="wrap_content">
                <TableLayout android:layout_width="match_parent" android:id="@+id/tableLayout2" android:layout_weight="1" android:layout_height="wrap_content">
                    <TableRow android:id="@+id/tableRow4" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content">
                        <TextView android:layout_width="100px" android:text="Plaka: " android:layout_weight="1" android:id="@+id/textView2"></TextView>
                        <EditText android:layout_width="370px" android:id="@+id/searchbox" android:inputType="textPersonName" android:layout_weight="1" android:layout_height="70px"></EditText>
                    </TableRow>
                    <TableRow android:id="@+id/tableRow5" android:gravity="center" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content">
                        <Button android:layout_width="wrap_content" android:onClick="searchBusButtonHandler" android:text="Find" android:minWidth="200px" android:id="@+id/button1" android:layout_height="wrap_content"></Button>
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableRow>
        <TableRow android:id="@+id/tableRow6" android:layout_height="wrap_content" android:layout_width="470px" android:layout_weight="1">
            <ListView android:id="@+id/listViewSearch" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="match_parent"></ListView>
        </TableRow>
        <TextView android:text="Status:" android:layout_height="wrap_content" android:id="@+id/statusView" android:layout_width="wrap_content"></TextView>

    </TableLayout>
    
</LinearLayout>
